4. Кнопки «Сортировать», «Найти», «Показать все», в форме с таблицей
Билет
 Private Sub Button1_Click(sender As Object, e As EventArgs) Handles
Button1.Click
 Dim Col As DataGridViewColumn = Nothing
 Select Case ListBox1.SelectedIndex
 Case 0
 Col = DataGridViewTextBoxColumn2
 Exit Select
 Case 1
 Col = DataGridViewTextBoxColumn3
 Exit Select
 Case 2
 Col = DataGridViewTextBoxColumn4
 Exit Select
 Case Else
 ' Можно обработать некорректный индекс, например:
 MessageBox.Show("Выберите корректный элемент из списка")
 Exit Sub
 End Select
 If Col IsNot Nothing Then
 If RadioButton1.Checked Then
 БилетDataGridView.Sort(Col,
ComponentModel.ListSortDirection.Ascending)
 Else
 БилетDataGridView.Sort(Col,
ComponentModel.ListSortDirection.Descending)
 End If
 End If
 End Sub
 Private Sub ListBox1_SelectedIndexChanged(sender As Object, e As EventArgs)
Handles ListBox1.SelectedIndexChanged
 Button1.Enabled = True
 End Sub
 Private Sub Button2_Click(sender As Object, e As EventArgs) Handles
Button2.Click
 End Sub
 Private Sub Button3_Click(sender As Object, e As EventArgs) Handles
Button3.Click
 БилетBindingSource.Filter = ""
 End Sub
